<body>
    <h2><a href="https://pl.wikipedia.org/wiki/Kot_domowy" style="color: rgb(14, 55, 72);">Kotki</a></h2>
    <div id="zdjecie"><img id="photo" src="./zdjecia/0.jpg"></div>
    <button type="button" class="buttony" id="previous">Previous</button>
    <button type="button" class="buttony" id="next">Next</button>
    <script>
        let id = 0;
        const numberOfPhotos = 7;
        let big = false;

        document.getElementById("next").addEventListener("click", next);
        document.getElementById("previous").addEventListener("click", prew);
        document.getElementById("photo").addEventListener("click", bigPhoto);

        function next() {
            if (id < numberOfPhotos - 1) {
                id++;
            } else {
                id = 0;
            }
            nowe();
        }

        function prew() {
            if (id > 0) {
                id--;
            } else {
                id = numberOfPhotos - 1;
            }
            nowe();
        }

        function nowe() {
            const photoElement = document.getElementById("photo");
            photoElement.src = "./zdjecia/" + id + ".jpg";
            photoElement.style.width = big ? "600px" : "500px";
            photoElement.style.height = big ? "400px" : "300px";
        }

        function bigPhoto() {
            big = !big;
            nowe();
        }
    </script>
</body>
